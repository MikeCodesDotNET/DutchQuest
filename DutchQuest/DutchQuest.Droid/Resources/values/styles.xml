<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#15a9fe</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#4a50ca</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#464646</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
    <item name="android:alertDialogTheme">@style/BaseDialogTheme</item>
  </style>

  <style name="BaseDialogTheme" parent="android:Theme.Material.Dialog.Alert">
    <item name="android:colorPrimary">@color/bd_blue</item>
  </style>
  
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FF4081</item>
  </style>
  <color name="actionbar_background">@color/bd_blue</color>

  <style name="AppTheme" parent="android:Theme.Light">
    <item name="android:background">@color/bd_white</item>
    <item name="android:windowBackground">@color/bd_white</item>
    <item name="android:colorBackground">@color/bd_white</item>

  </style>
  
  <color name="primary">#15a9fe</color>
  <color name="primary_dark">#4a50ca</color>
  <color name="accent">#50d2c2</color>
  
  <color name="bd_blue">#50d2c2</color>
  <color name="bd_white">#f7f7f7</color>
</resources>
